
<odoo>
    <record id="view_rental_report_wizard_form" model="ir.ui.view">
        <field name="name">rental.report.wizard.form</field>
        <field name="model">rental.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Export Laporan Rental">
                <group>
                    <field name="date_start"/>
                    <field name="date_end"/>
                </group>
                <footer>
                    <button type="object" name="action_redirect_download" string="Export ke Excel" class="btn-primary"/>
                    <button string="Tutup" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_rental_report_wizard" model="ir.actions.act_window">
        <field name="name">Export Laporan Rental</field>
        <field name="res_model">rental.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
