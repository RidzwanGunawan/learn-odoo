<odoo>
    <record id="action_rental_cancel_wizard" model="ir.actions.act_window">
        <field name="name">Pembatalan Sewa</field>
        <field name="res_model">rental.cancel.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_rental_cancel_wizard_form" model="ir.ui.view">
        <field name="name">rental.cancel.wizard.form</field>
        <field name="model">rental.cancel.wizard</field>
        <field name="arch" type="xml">
            <form string="Pembatalan Sewa">
                <group>
                    <field name="cancel_reason"/>
                </group>
                <footer>
                    <button string="Batalkan" type="object" name="action_cancel_rental" class="btn-primary"/>
                    <button string="Tutup" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
