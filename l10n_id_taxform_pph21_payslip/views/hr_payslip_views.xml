<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sequence -->
    <record id="seq_hr_payslip_custom" model="ir.sequence">
        <field name="name">HR Payslip Custom</field>
        <field name="code">hr.payslip.custom</field>
        <field name="prefix">PSL/</field>
        <field name="padding">5</field>
        <field name="company_id" eval="False"/>
    </record>

    <!-- Action -->
    <record id="action_hr_payslip_custom" model="ir.actions.act_window">
        <field name="name">Payslips</field>
        <field name="res_model">hr.payslip.custom</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_current_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first payslip!
            </p>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_hr_payslip_custom_tree" model="ir.ui.view">
        <field name="name">hr.payslip.custom.tree</field>
        <field name="model">hr.payslip.custom</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="gross_salary"/>
                <field name="net_salary"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hr_payslip_custom_form" model="ir.ui.view">
        <field name="name">hr.payslip.custom.form</field>
        <field name="model">hr.payslip.custom</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_done" string="Validate" type="object" class="btn-primary" modifiers="{'invisible': [('state', '!=', 'confirmed')]}"/>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary" modifiers="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_cancel" string="Cancel" type="object" modifiers="{'invisible': [('state', 'not in', ['draft', 'confirmed'])]}"/>
                    <button name="action_draft" string="Set to Draft" type="object" modifiers="{'invisible': [('state', 'not in', ['cancel', 'done'])]}"/>
                    <field name="state" widget="statusbar" clickable="true"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="employee_id"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="state"/>
                            <field name="gross_salary" readonly="1"/>
                            <field name="net_salary" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Earnings">
                            <group col="4">
                                <field name="basic_salary"/>
                                <field name="transport_allowance"/>
                                <field name="meal_allowance"/>
                                <field name="position_allowance"/>
                                <field name="other_allowance"/>
                                <field name="bonus"/>
                            </group>
                        </page>
                        
                        <page string="Deductions">
                            <group col="4">
                                <field name="bpjs_kes"/>
                                <field name="bpjs_tk"/>
                                <field name="other_deductions"/>
                                <field name="total_deductions" readonly="1"/>
                            </group>
                        </page>
                        
                        <page string="PPh 21">
                            <group col="4">
                                <field name="pph21_taxable_income" readonly="1"/>
                                <field name="pph21_deducted" readonly="1"/>
                                <field name="pph21_accumulated" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_hr_payslip_custom_root" name="Payroll" sequence="10"/>
    <menuitem id="menu_hr_payslip_custom" name="Payslips" parent="menu_hr_payslip_custom_root" action="action_hr_payslip_custom" sequence="10"/>
</odoo>